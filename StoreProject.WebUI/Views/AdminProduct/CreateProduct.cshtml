@using DtoLayer.ProductDtos
@model CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ürünler</h4>
            <p class="card-description">
                Ürünler İçin Bilgileri Ekleme Sayfası
            </p>
            <form method="post" class="forms-sample">

                <div class="form-group">
                    <label for="exampleInputName1">Ürün Adı </label>
                    <input asp-for="Name" type="text" class="form-control" id="exampleInputName1">
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Ürün Başlığı </label>
                    <input asp-for="Title" type="text" class="form-control" id="exampleInputName1">
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Ürün Açıklaması </label>
                    <input asp-for="Description" type="text" class="form-control" id="exampleInputName1">
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Ürün Fiyatı </label>
                    <input asp-for="Price" type="text" class="form-control" id="exampleInputName1">
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Ürün Kategorisi </label>
                    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Ürün Resim Yolu 1 </label>
                    <input asp-for="ImageUrl1" type="text" class="form-control" id="exampleInputName1">
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Ürün Resim Yolu 2 </label>
                    <input asp-for="ImageUrl2" type="text" class="form-control" id="exampleInputName1">
                </div>

                <div class="form-group">
                    <label for="exampleInputName1">Ürün Resim Yolu 3 </label>
                    <input asp-for="ImageUrl3" type="text" class="form-control" id="exampleInputName1">
                </div>
               

                <button type="submit" class="btn btn-primary mr-2">Ekle</button>
                <a href="/AdminProduct/Index" class="btn btn-light">İptal Et</a>
            </form>
        </div>
    </div>
</div>
