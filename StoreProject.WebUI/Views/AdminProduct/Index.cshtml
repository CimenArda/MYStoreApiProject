@using DtoLayer.ProductDtos
@model List<ResultProductDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ürün Tablosu</h4>
            <p class="card-description">
                Ürünler İle Alakalı İşlemleri Yönetebileceğiniz Alandır
            </p>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Ürün Numarası
                            </th>
                            <th>
                                Ürün Adı
                            </th>
                            <th>
                                Ürün Fiyatı
                            </th>
                            <th>
                                Ürün Kategorisi
                            </th>
                          

                            <th>
                            </th>
                            <th>
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {


                            <tr>
                                <td>@item.ProductID</td>
                                <td>@item.Name</td>
                                <td>@item.Price</td>
                                <td>@item.CategoryName</td>
                         
                              
                                <td><a class="btn btn-danger" href="/AdminProduct/DeleteProduct/@item.ProductID">Sil</a></td>
                                <td><a class="btn btn-success" href="/AdminProduct/UpdateProduct/@item.ProductID">Güncelle</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
                <br />
                <a class="btn btn-primary" href="/AdminProduct/CreateProduct/">Ekle</a>
            </div>
        </div>
    </div>
</div>
