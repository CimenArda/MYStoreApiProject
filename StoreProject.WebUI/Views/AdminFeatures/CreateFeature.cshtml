@using DtoLayer.FeatureDtos
@model CreateFeatureDto
@{
    ViewData["Title"] = "CreateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Öne Çıkanlar(Slider)</h4>
            <p class="card-description">
                Öne Çıkanlar(Slider) Sayfası İçin Bilgileri Ekleme Sayfası
            </p>
            <form method="post" class="forms-sample">
                <div class="form-group">
                    <label for="exampleInputName1">Başlık </label>
                    <input asp-for="Title" type="text" class="form-control" id="exampleInputName1">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Açıklama </label>
                    <input asp-for="Description" type="text" class="form-control" id="exampleInputName1">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Resim Yolu </label>
                    <input asp-for="ImageUrl" type="text" class="form-control" id="exampleInputName1">
                </div>
               
                <button type="submit" class="btn btn-primary mr-2">Ekle</button>
                <a href="/AdminFeatures/Index" class="btn btn-light">İptal Et</a>
            </form>
        </div>
    </div>
</div>