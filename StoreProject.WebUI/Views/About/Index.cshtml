@using DtoLayer.AboutDtos
@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/MainLayout/Index.cshtml";
}


@foreach (var item in Model)
{
	

<div class="row p-b-148">
	<div class="col-md-7 col-lg-8">
		<div class="p-t-7 p-r-85 p-r-15-lg p-r-0-md">
			<h3 class="mtext-111 cl2 p-b-16">
				Bizim Hikayemiz
			</h3>

			<p class="stext-113 cl6 p-b-26">
			@item.OurStory
			</p>
		</div>
	</div>

	<div class="col-11 col-md-5 col-lg-4 m-lr-auto">
		<div class="how-bor1 ">
			<div class="hov-img0">
				<img src="~/cozastore-master/images/about-01.jpg" alt="IMG">
			</div>
		</div>
	</div>
</div>

<div class="row">
	<div class="order-md-2 col-md-7 col-lg-8 p-b-30">
		<div class="p-t-7 p-l-85 p-l-15-lg p-l-0-md">
			<h3 class="mtext-111 cl2 p-b-16">
				Misyonumuz
			</h3>

			<p class="stext-113 cl6 p-b-26">
			@item.OurMission
			</p>

			<div class="bor16 p-l-29 p-b-9 m-t-22">
				<p class="stext-114 cl6 p-r-40 p-b-11">
						Hızlı değişim zamanlarında, sadece öğrenenler hayatta kalır. Öğrenmeyi bırakanlar, geçmişte yaşar.
				</p>

				<span class="stext-111 cl8">
					- Erric Hoffer
				</span>
			</div>
		</div>
	</div>

	<div class="order-md-1 col-11 col-md-5 col-lg-4 m-lr-auto p-b-30">
		<div class="how-bor2">
			<div class="hov-img0">
				<img src="~/cozastore-master/images/about-02.jpg" alt="IMG">
			</div>
		</div>
	</div>
</div>
}