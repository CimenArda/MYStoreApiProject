@using DtoLayer.ProductDtos
@model List<ResultProductDto>

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-title mb-0">HIZLI BAKIŞ-Ürünlerimiz</p>
            <div class="table-responsive">
                <table class="table table-striped table-borderless">
                    <thead>
                        <tr>
                            <th>Ürün Adı</th>
                            <th>Ürün Başlığı</th>
                            <th>Ürün Fiyatı</th>
                            <th>Ürün Kategorisi</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>@item.Name</td>
                                <td class="font-weight-bold">@item.Title</td>
                                <td>@item.Price</td>
                                <td>@item.CategoryName</td>
                                <td class="font-weight-medium"><a href="/AdminProduct/Index" class="btn btn-dark">Ürünler Sayfası</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>