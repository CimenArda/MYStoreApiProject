<div class="col-md-6 grid-margin transparent">
    <div class="row">
        <div class="col-md-6 mb-4 stretch-card transparent">
            <div class="card card-tale">
                <div class="card-body">
                    <p class="mb-4">Gönderilen Mesaj Sayısı</p>
                    <p class="fs-30 mb-2">@ViewBag.contactCount</p>
                    <p>10.00% (Artış)</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4 stretch-card transparent">
            <div class="card card-dark-blue">
                <div class="card-body">
                    <p class="mb-4">Kategori Sayısı</p>
                    <p class="fs-30 mb-2">@ViewBag.categoryCount</p>
                    <p>22.00% (Artış)</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 mb-4 mb-lg-0 stretch-card transparent">
            <div class="card card-light-blue">
                <div class="card-body">
                    <p class="mb-4">Ürün Sayısı</p>
                    <p class="fs-30 mb-2">@ViewBag.productCount</p>
                    <p>90.00% (Artış)</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 stretch-card transparent">
            <div class="card card-light-danger">
                <div class="card-body">
                    <p class="mb-4">En Yüksek Fiyatlı Ürün</p>
                    <p class="fs-30 mb-2">@ViewBag.productName</p>
                    <p>12% (ZAM)</p>
                </div>
            </div>
        </div>
    </div>
</div>