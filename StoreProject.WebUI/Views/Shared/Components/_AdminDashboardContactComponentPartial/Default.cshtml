@using DtoLayer.ContactDtos
@model List<ResultContactDto>

<div class="col-md-8 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-title mb-0">HIZLI BAKIŞ-İletişim Kısmı Gelen Mesajlar</p>
            <div class="table-responsive">
                <table class="table table-striped table-borderless">
                    <thead>
                        <tr>
                            <th>Mesaj Numarası</th>
                            <th>Gönderen Email</th>
                            <th>Mesaj</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                           
                        <tr>
                            <td>@item.Id</td>
                            <td class="font-weight-bold">@item.Email</td>
                            <td>@item.Description.Substring(0,20)...</td>
                            <td class="font-weight-medium"><a href="/AdminContact/Index" class="btn btn-primary">Detaylar İçin</a></td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>