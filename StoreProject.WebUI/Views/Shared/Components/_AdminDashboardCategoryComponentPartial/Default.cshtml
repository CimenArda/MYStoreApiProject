@using DtoLayer.CategoryDtos
@model List<ResultCategoryDto>
<div class="col-md-4 stretch-card grid-margin">
    <div class="card">
        <div class="card-body">
            <p class="card-title">Kategoriler</p>
            <ul class="icon-data-list">
                @foreach (var item in Model)
                {

                    <li>
                        <div class="d-flex">
                            <div>
                                <p class="text-info mb-1"><strong>@item.CategoryName</strong></p>
                                <p class="mb-0"><strong>Yüzlerce ürün arasından dilediğiniz ürünü kolayca bulun!</strong></p>
                            </div>
                        </div>
                    </li>
                    <br />
                    <br />

                }
            </ul>
        </div>
    </div>
</div>